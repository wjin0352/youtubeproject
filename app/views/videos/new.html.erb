<div class="container">
	<h1>New Video</h1>

	<%= form_for @video do |f| %>
		<%= render 'shared/errors', object: @video %>

		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title %><br />
			<%= f.label :link %>
			<%= f.text_field :link_address, class: 'form-control', required: true %><br />
			<span class="help-block">Link to video on youtube.</span>
		</div>

		<%= f.submit class: 'btn btn-default' %>
	<% end %>
</div>
